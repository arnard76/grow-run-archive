{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env",
                ".env.secrets"
            ],
            "env": [
                "SECRET_*"
            ],
            "outputs": [
                "dist/**",
                ".svelte-kit/**",
                ".vercel/**"
            ]
        },
        "start": {},
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}