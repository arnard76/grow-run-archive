{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env.*"
    ],
    "envMode": "loose",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env.*"
            ],
            "env": [
                "SECRET_*"
            ],
            "outputs": [
                "dist/**",
                ".svelte-kit/**",
                ".vercel/**"
            ]
        },
        "start": {
            "dependsOn": [
                "build"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}