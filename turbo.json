{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "env": [
                "SECRET_BREVO_CLIENT_EMAIL",
                "SECRET_BREVO_CLIENT_PASS"
            ],
            "outputs": [
                "dist/**",
                ".svelte-kit/**"
            ]
        },
        "start": {},
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}